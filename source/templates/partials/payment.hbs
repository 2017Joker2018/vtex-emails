<!-- 1 payment -->

{{#compare payments.length "==" 1}}
  {{#each payments}}
  <div class="f4 lh-copy">
    {{paymentSystemName}}
    {{#if lastDigits}} ((i18n.payment.lastDigits)) {{lastDigits}} {{/if}}
    <br />((i18n.common.currency)) {{formatCurrency value}}
    {{#compare ../payments.length "==" 1}}
      ((i18n.payment.atSight))
    {{/compare}}
    {{#compare ../payments.length "!=" 1}}
      ((i18n.payment.in)) {{installments}}x
    {{/compare}}
  </div>
  {{/each}}
{{/compare}}

<!-- N payments -->

{{#compare payments.length "!=" 1}}
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  {{#each payments}}
  <tr>
    <td class="f5 pv1 bb b--light-gray">
      {{paymentSystemName}}
      {{#if lastDigits}} ((i18n.payment.lastDigits)) {{lastDigits}} {{/if}}
      {{#compare ../payments.length "==" 1}}
        ((i18n.payment.atSight))
      {{/compare}}
      {{#compare ../payments.length "!=" 1}}
        ((i18n.payment.in)) {{installments}}x
      {{/compare}}
    </td>
    <td class="f5 pv1 bb b--light-gray align-right">((i18n.common.currency)) {{formatCurrency value}}</td>
  </tr>
  {{/each}}
</table>
{{/compare}}
